    "N = int(input())\n",
    "# Variable containing the required amount\n",
    "amount = 0\n",
    "if N > 0:\n",
    "    for i in range(1, N + 1, 1):\n",
    "        amount = amount + i\n",
    "elif N <= 0:\n",
    "    for i in range(N, 2, 1):\n",
    "        amount = amount + i\n",
    "print(amount)"
